FROM golang:1.24

# Install Air for hot reload
RUN go install github.com/air-verse/air@latest

WORKDIR /app

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Create tmp directory for Air
RUN mkdir -p tmp

# Expose port
EXPOSE 8080

# Run Air for hot reload
CMD ["air"] 